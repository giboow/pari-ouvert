{% extends "layout.twig" %}

{% block content %}
   <form method="post">
   Parking :
   <select name="parkingid">
   {% for item in list %}
      <option value="{{ item.id }}"> {{ item.name }} ( {{ item.size }} ) </option>
   {% endfor %}
   </select> <br/>
   Places restantes :
   <input type="text" name="nbplaces" value="0" required=""/>  <br/>
   Date du pari :
   <input type="text" name="datepari" value="20/12/2013 12:55" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01])/(0[1-9]|1[012])/[0-9]{4} (0[0-9]|1[0-9]|2[0-3])(:[0-5][0-9])" required="" />  <br/>
   Mise :
   <input type="text" name="mise" value="10" required="" /> <br/>
   <input type="hidden" name="userid" value="{{ user.id }}" />
   <input type="submit" value="Valider" />
   </form>
{% endblock %}